@model IEnumerable<Sduo.Models.Student>

@{
    ViewBag.Title = "Studerende";
}

<h2>Studerende</h2>

<p>
    @Html.ActionLink("Ny studerende", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.CprNr).ToHtmlString(), "Index", new { oldColumnName = ViewBag.ColumnName, oldDirection = ViewBag.Direction, columnName = "CprNr" })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.Name).ToHtmlString(), "Index", new { oldColumnName = ViewBag.ColumnName, oldDirection = ViewBag.Direction, columnName = "Name" })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CprNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Redigér", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Vis", "Details", new { id=item.Id }) |
            @Html.ActionLink("Tilmeldinger", "Index", "StudentEnrollments", new { studentId=item.Id }, null) |
            @Html.ActionLink("Slet", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
